#!/bin/bash
#
# /etc/rc.d/init.d/fmssed
#
# Starting the files management service of SysferaDS system
#
# chkconfig: 2345 98 80
# description: fmssed system
# 

### BEGIN INIT INFO
# Provides: dispatcher
# Required-Start: $local_fs $network $remote_fs
# Required-Stop: $local_fs $network $remote_fs
# Default-Start:  2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: start and stop dispatcher
# Description: The FMS  service is the files management of SysFera system
### END INIT INFO

# Source function library.
. /etc/rc.d/init.d/functions

if [ -e /etc/default/sysfera ]; then
	. /etc/default/sysfera
else
  CONFIG_VISHNU=/etc/vishnu.cfg
  START_FMSSED=yes
fi

PATH=$PATH:/usr/local/sbin

RETVAL=0
NAME=fmssed
PIDFILE=/var/run/$NAME.pid
DAEMON="$NAME $CONFIG_VISHNU"
LOG_DIR=/var/log/vishnu
LOG_FILE=${LOG_DIR}/${NAME}.log

# create log directory
if [ ! -d ${LOG_DIR} ]; then
  mkdir -p ${LOG_DIR}
  [ -n "$SYSFERA_USER_UID" ] && chown -R $SYSFERA_USER_UID:$SYSFERA_USER_UID ${LOG_DIR}
fi

check() {
	if [ "$START_FMSSED" != "y" -a "$START_FMSSED" != "yes" ] ; then
		exit
	fi
}

start() {
	if [ -z "$SYSFERA_USER_UID" ] ; then
                daemon --pidfile $PIDFILE "nohup $DAEMON >${LOG_FILE} 2>&1 &"
	else
                daemon --user $SYSFERA_USER_UID --pidfile $PIDFILE "nohup $DAEMON >${LOG_FILE} 2>&1 &"
	fi
	RETVAL=$?
	if [ $RETVAL -eq 0 ] ; then
		touch /var/lock/subsys/$NAME
		[ ! -f $PIDFILE ] &&
		sleep 2
		pidof $NAME  > $PIDFILE
	fi
	return $RETVAL
}

stop() {
	killproc -p $PIDFILE $NAME
	RETVAL=$?
	[ $RETVAL -eq 0 ] && rm -f /var/lock/subsys/$NAME
	return $RETVAL
}

case "$1" in
	start)
		check
		echo -n "Starting $NAME services: "
		start
	;;
	stop)
		check
		echo -n "Shutting down $NAME services: "
		stop
	;;
	status)
		status -p $PIDFILE $NAME
	;;
	restart)
		stop
		start
	;;
	*)
		echo "Usage: $NAME {start|stop|status|restart}"
		exit 1
	;;
esac

